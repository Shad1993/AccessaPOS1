<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- First Button -->
        <Button
            android:id="@+id/Splitpayment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        android:text="Split Payment"
        android:textSize="18sp"
        android:backgroundTint="@color/BleuAccessaText"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

        <!-- Second Button -->
        <Button
            android:id="@+id/full_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

        android:text="Full Payment"
        android:textSize="18sp"
        android:backgroundTint="@color/BleuAccessaText"
        android:layout_marginEnd="16dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="1dp">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view1"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/title_text_view"
        android:layout_alignParentStart="true"/>


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif"
android:visibility="gone"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/paymethods" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="40dp">
    <TextView
        android:id="@+id/textViewTotalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Total"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/textViewAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rs 0.00"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:id="@+id/textViewTotalAmountdue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remainingTopay"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/textViewAmountdue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rs 0.00"
        android:visibility="gone"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:id="@+id/textViewCashReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/cashReturn"
        android:textSize="18dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textViewCashReturnAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rs 0.00"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone" />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="@string/amountRecieved"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black" />


    <EditText
        android:id="@+id/editAbbrev"
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:inputType="number"
        android:textColor="@color/BleuAccessaText"
        android:background="@drawable/edittext1_rounded_bg"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="@string/amountRecieved" />
            <LinearLayout
                android:id="@+id/container_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:visibility="visible"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/button7"
                android:text="7"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />

            <Button
                android:id="@+id/button8"
                android:text="8"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />

            <Button
                android:id="@+id/button9"
                android:text="9"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />
            <Button
                android:id="@+id/button4"
                android:text="4"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />

            <Button
                android:id="@+id/button5"
                android:text="5"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />

            <Button
                android:id="@+id/button6"
                android:text="6"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />
            <Button
                android:id="@+id/button1"
                android:text="1"
                android:textSize="24sp"

                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick"
                android:tag="1"/>



            <Button
                android:id="@+id/button2"
                android:text="2"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />

            <Button
                android:id="@+id/button3"
                android:text="3"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />





            <Button
                android:id="@+id/button0"
                android:text="0"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />



            <Button
                android:id="@+id/buttonComma"
                android:text="@string/point"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />
            <Button
                android:id="@+id/buttonbackspace"
                android:text="BS"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />
            <Button
                android:id="@+id/buttonClear"
                android:text="@string/CL"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />



        </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonCash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@drawable/baseline_payments_24"
            android:text="Validate"
            android:textSize="18sp"
            android:visibility="gone"
            android:backgroundTint="@color/BleuAccessaText"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"/>

    </LinearLayout>






</LinearLayout>
</ScrollView>