<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        >


         <Button
            android:id="@+id/buttonFr"
            android:text="Francais"
            android:drawableRight="@drawable/fr"
            android:textSize="18sp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_below="@id/imageLogo"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/BleuAccessaText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <Button
            android:id="@+id/buttonEng"
            android:text="English"
            android:drawableRight="@drawable/eng"
            android:textSize="18sp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_below="@id/buttonFr"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/BleuAccessaText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>





    </RelativeLayout>
</ScrollView>

