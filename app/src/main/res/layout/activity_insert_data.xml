<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    android:background="@drawable/welcome_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iboralogos"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CompanyInfo"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abbreviation"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editAbbrev"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/BleuAccessaText"
            android:background="@drawable/edittext_rounded_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_gravity="center_horizontal"
            android:hint="Abbreviation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. of Stock"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editNoStock"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="No. of Stock"
            android:inputType="number"
            android:textColor="@color/BleuAccessaText"
            android:background="@drawable/edittext_rounded_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. of Prices"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editNoPrices"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="No. of Prices"
            android:inputType="number"
            android:textColor="@color/BleuAccessaText"
            android:background="@drawable/edittext_rounded_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default Supplier Code"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editDefSupplierCode"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Default Supplier Code"
            android:textColor="@color/BleuAccessaText"
            android:background="@drawable/edittext_rounded_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_gravity="center_horizontal" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VAT No"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editVATNo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="VAT No"
            android:inputType="number"
            android:textColor="@color/BleuAccessaText"
            android:background="@drawable/edittext_rounded_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BRN No"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editBRNNo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="BRN No"
            android:textColor="@color/BleuAccessaText"
            android:background="@drawable/edittext_rounded_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADR 1"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editADR1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="ADR 1"
            android:textColor="@color/BleuAccessaText"
            android:background="@drawable/edittext_rounded_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADR 2"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editADR2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="ADR 2"
            android:textColor="@color/BleuAccessaText"
            android:background="@drawable/edittext_rounded_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADR 3"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editADR3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="ADR 3"
            android:textColor="@color/BleuAccessaText"
            android:background="@drawable/edittext_rounded_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tel No"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editTelNo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Tel No"
            android:textColor="@color/BleuAccessaText"
            android:background="@drawable/edittext_rounded_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fax No"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editFaxNo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Fax No"
            android:textColor="@color/BleuAccessaText"
            android:background="@drawable/edittext_rounded_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editCompanyName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Company Name"
            android:textColor="@color/BleuAccessaText"
            android:background="@drawable/edittext_rounded_bg"
            android:gravity="center"
            android:padding="8dp"
            android:layout_gravity="center_horizontal" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logo"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/accessalogo"
            android:scaleType="centerCrop"
            android:background="@drawable/edittext_rounded_bg"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnUploadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnInsertData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert Data"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>
