<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/category" />

    <TextView
        android:id="@+id/id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="10dp"
        android:text="Id"
        android:textColor="#000"
        android:textSize="0sp" />

    <TextView
        android:id="@+id/Catname_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_toRightOf="@id/id_text_view"
        android:layout_marginLeft="10dp"
        android:text="Name"
        android:layout_marginBottom="20dp"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Color_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Catname_text_view"
        android:layout_toRightOf="@id/id_text_view"
        android:layout_marginLeft="10dp"
        android:text="Color"

        android:visibility="gone"
        android:textColor="#000"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/printingstatus_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Color_text_view"
        android:layout_toRightOf="@id/id_text_view"
        android:layout_marginLeft="10dp"
        android:text="Color"
        android:visibility="gone"
        android:textColor="#000"
        android:textSize="20sp" />

</RelativeLayout>
