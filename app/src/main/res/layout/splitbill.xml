
    <ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainer"
            android:name="com.accessa.ibora.sales.ticket.Checkout.SplitTicketFragment"
            android:layout_width="70dp"
            android:layout_height="650dp"
            android:layout_weight="1"
            android:tag="TicketFragment" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
        android:orientation="vertical">
            <EditText
                android:id="@+id/editTextSplitAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="Enter Split Amount" />
            <EditText
                android:id="@+id/editTextSplitVat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="Enter Split Vat" />
            <EditText
                android:id="@+id/editTextNumberOfPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Number of People"
                android:inputType="none" />

             <androidx.fragment.app.FragmentContainerView
                android:id="@+id/Keyboard_fragment"
                class="com.accessa.ibora.sales.keyboard.keyboardFragment"
                android:layout_width="540dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="540dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/closeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Close" />
                <Button
                    android:id="@+id/splitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Split" />
                <Button
                    android:id="@+id/PrintButton"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Print" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <GridLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="false"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/button7"
                    android:text="7"
                    android:textSize="20sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:backgroundTint="@color/textviewextColor"
                    android:onClick="onNumberButtonClick" />

                <Button
                    android:id="@+id/button8"
                    android:text="8"
                    android:textSize="20sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:backgroundTint="@color/textviewextColor"
                    android:onClick="onNumberButtonClick" />

                <Button
                    android:id="@+id/button9"
                    android:text="9"
                    android:textSize="20sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:backgroundTint="@color/textviewextColor"
                    android:onClick="onNumberButtonClick" />
                <Button
                    android:id="@+id/button4"
                    android:text="4"
                    android:textSize="20sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:backgroundTint="@color/textviewextColor"
                    android:onClick="onNumberButtonClick" />

                <Button
                    android:id="@+id/button5"
                    android:text="5"
                    android:textSize="20sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:backgroundTint="@color/textviewextColor"
                    android:onClick="onNumberButtonClick" />

                <Button
                    android:id="@+id/button6"
                    android:text="6"
                    android:textSize="20sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:backgroundTint="@color/textviewextColor"
                    android:onClick="onNumberButtonClick" />
                <Button
                    android:id="@+id/button1"
                    android:text="1"
                    android:textSize="20sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:backgroundTint="@color/textviewextColor"
                    android:onClick="onNumberButtonClick"
                    android:tag="1"/>



                <Button
                    android:id="@+id/button2"
                    android:text="2"
                    android:textSize="20sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:backgroundTint="@color/textviewextColor"
                    android:onClick="onNumberButtonClick" />

                <Button
                    android:id="@+id/button3"
                    android:text="3"
                    android:textSize="20sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:backgroundTint="@color/textviewextColor"
                    android:onClick="onNumberButtonClick" />





                <Button
                    android:id="@+id/button0"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:backgroundTint="@color/textviewextColor"
                    android:onClick="onNumberButtonClick" />




                <Button
                    android:id="@+id/buttonbackspace"
                    android:text="BS"
                    android:textSize="10sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:backgroundTint="@color/textviewextColor"
                    android:onClick="onNumberButtonClick" />
                <Button
                    android:id="@+id/buttonClear"
                    android:text="@string/CL"
                    android:textSize="10sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:backgroundTint="@color/textviewextColor"
                    android:onClick="onNumberButtonClick" />



            </GridLayout>
            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="10dp"
                android:text="Result will be displayed here"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
    </ScrollView>