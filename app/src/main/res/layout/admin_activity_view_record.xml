<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout android:orientation="vertical"
    android:screenOrientation="landscape"
    android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="25dp" android:visibility="visible" android:padding="3dp" android:layout_marginRight="6dp" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:id="@+id/id"/>

    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:padding="3dp" android:id="@+id/title" android:textStyle="bold" android:textSize="17sp" android:maxLines="1" android:layout_toRightOf="@id/id" android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:visibility="visible"
        android:padding="3dp"
        android:id="@+id/desc"
        android:maxLines="2"
        android:layout_toRightOf="@id/id"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:layout_below="@id/title"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:visibility="visible"
        android:padding="3dp"
        android:id="@+id/price"
        android:maxLines="2"
        android:layout_toRightOf="@id/id"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:layout_below="@id/desc"/>


    <TextView android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:visibility="visible"
        android:padding="3dp"
        android:id="@+id/LongDescription"
        android:maxLines="2"
        android:layout_toRightOf="@id/id"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:layout_below="@id/price"/>


    <TextView android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:visibility="visible"
        android:padding="3dp"
        android:id="@+id/Barcode"
        android:maxLines="2"
        android:layout_toRightOf="@id/id"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:layout_below="@id/LongDescription"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:visibility="visible"
        android:padding="3dp"
        android:id="@+id/ExpiryDate"
        android:maxLines="2"
        android:layout_toRightOf="@id/id"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:layout_below="@id/Barcode"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:visibility="visible"
        android:padding="3dp"
        android:id="@+id/Category"
        android:maxLines="2"
        android:layout_toRightOf="@id/id"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:layout_below="@id/ExpiryDate"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:visibility="visible"
        android:padding="3dp"
        android:id="@+id/deptcode_text_view"
        android:maxLines="2"
        android:layout_toRightOf="@id/id"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:layout_below="@id/Category"/>
</RelativeLayout>