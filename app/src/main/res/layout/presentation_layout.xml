<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/presentation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/presentation_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <VideoView
        android:id="@+id/presentation_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <FrameLayout
        android:id="@+id/splash_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:visibility="gone"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/welcome_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38sp"
            android:text="@string/Thanks"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/OrangeAccessa"
            android:layout_centerInParent="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo_image_view"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="200dp"
            android:src="@drawable/accessalogo"
            android:layout_below="@id/text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />


    </FrameLayout>
    <FrameLayout
        android:id="@+id/default_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/BleuAccessaText"
        android:visibility="gone"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/welcomes_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38sp"
            android:text="@string/Thanks"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/ibora_image_view"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="200dp"
            android:src="@drawable/iboralogo"
            android:layout_below="@id/text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />


    </FrameLayout>


    <FrameLayout
        android:id="@+id/qr_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:background="@color/BleuAccessaText"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:id="@+id/log_view"
            android:layout_width="200dp"
            android:layout_gravity="center_vertical"
            android:layout_height="200dp"
            android:visibility="gone"
            android:src="@drawable/poplogo"
            android:layout_below="@id/text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />
        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38sp"
            android:layout_marginLeft="100dp"
            android:text="testccccccc"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/thanks_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38sp"
            android:text="@string/Thanks"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_centerInParent="true" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/qr_code_image_view"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_below="@id/text_view"
                android:src="@drawable/qr"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/Total_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38sp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:text="Total: Rs0.00"
                android:layout_below="@id/qr_code_image_view"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_centerInParent="true" />
            <TextView
                android:id="@+id/Tax_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:layout_centerHorizontal="true"
                android:text="Tax: Rs0.00"
                android:layout_below="@id/qr_code_image_view"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_centerInParent="true" />
            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38sp"
                android:text="@string/PhoneNumber"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_centerInParent="true" />
        </LinearLayout>

    </FrameLayout>


</LinearLayout>
