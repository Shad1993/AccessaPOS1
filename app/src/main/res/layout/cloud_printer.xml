<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".printer.BluetoothPrinterActivity">

    <Button
        android:id="@+id/usb"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Usb"
        android:onClick="usb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bluetooth"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="bluetooth"
        android:onClick="bluetooth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usb" />

    <Button
        android:id="@+id/net"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="net"
        android:onClick="net"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bluetooth" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="connect"
        android:onClick="connect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/net" />

    <Button
        android:id="@+id/btnPrint"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="print"
        android:onClick="print"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnConnect" />

</androidx.constraintlayout.widget.ConstraintLayout>
