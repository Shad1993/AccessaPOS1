<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:background="@color/textviewextColor"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/Tickets"
            android:background="@color/BleuAccessaText"
            app:titleTextColor="@color/white"

            >
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Room Icon -->
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/room"
            android:tint="@color/BleuAccessaText" />

        <!-- Room Number -->
        <TextView
            android:id="@+id/textViewRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room: "
            android:textSize="9sp"
            android:textColor="@color/BleuAccessaText"
            android:textStyle="bold" />


        <!-- Table Icon -->
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/tableimg"
            android:tint="@color/BleuAccessaText" />

        <!-- Table Number -->
        <TextView
            android:id="@+id/textViewTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - Table: "
            android:textSize="9sp"
            android:textColor="@color/BleuAccessaText"
            android:textStyle="bold" />



        <!-- Cashier Icon -->
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/cashier"
            android:tint="@color/BleuAccessaText" />

        <!-- Cashier Name -->
        <TextView
            android:id="@+id/textViewCashier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - Cashier: "
            android:textSize="9sp"
            android:textColor="@color/BleuAccessaText"
            android:textStyle="bold" />



    </LinearLayout>

    <!-- Product List -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp" />
    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_add_24"
       app:tint="@android:color/white"
        app:backgroundTint="@color/BleuAccessaText"
        app:fabSize="normal" />

    <FrameLayout
        android:id="@+id/empty_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:gravity="center">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="bottom"
            android:background="@color/BleuAccessaText"
            android:orientation="vertical">
            <!-- Separator Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <!-- VAT -->
            <TextView
                android:id="@+id/textViewVATs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tax"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <!-- Separator Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <!-- Total -->
            <TextView
                android:id="@+id/textViewTotals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Total"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@color/textviewextColor"
        >
        <!-- Separator Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/BleuAccessaText" />
        <!-- VAT -->
        <TextView
            android:id="@+id/textViewVAT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tax"
            android:textSize="18sp"
            android:textColor="@color/BleuAccessaText"
            android:textStyle="bold" />
        <!-- Separator Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/BleuAccessaText" />
        <!-- Total -->
        <TextView
            android:id="@+id/textViewTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Total"
            android:textSize="18sp"
            android:textColor="@color/BleuAccessaText"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Footer Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white"
        >

        <!-- save Button -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/saveTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Save"
                android:padding="16dp"
                android:layout_centerInParent="true"/>

        <!-- <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_centerInParent="true"
          android:src="@drawable/receiptwhite" />
-->
  </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="end"
      >
  <!-- Checkout Button -->
             <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buttonCheckout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Checkout"

                    android:padding="16dp"
                    android:layout_centerInParent="true"/>

                 <!--  <ImageView
                       android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:layout_centerInParent="true"
                   android:src="@drawable/cartwhite" />
                   -->

               </RelativeLayout>

           </LinearLayout>

       </LinearLayout>


   </LinearLayout>