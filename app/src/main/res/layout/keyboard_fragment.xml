<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:screenOrientation="portrait">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.accessa.ibora.sales.keyboard.CustomEditText
            android:id="@+id/editTextBarcode"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="20"
            android:textSize="20sp"
            android:textColor="@color/BleuAccessaText"
            android:background="@drawable/edittext1_rounded_bg"
            android:gravity="center"
            android:drawableEnd="@drawable/bsearchbarcode"
            android:padding="8dp"
            android:layout_gravity="center"
             />

        <androidx.cardview.widget.CardView
            android:id="@+id/buttonEnter"
            android:layout_width="150dp"
            android:layout_height="40dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/BleuAccessaText"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_gravity="center"
        android:onClick="onEnterButtonClick">

        <TextView
            android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/enter"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        />
    </androidx.cardview.widget.CardView>




        <GridLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/button7"
                android:text="7"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />

            <Button
                android:id="@+id/button8"
                android:text="8"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />

            <Button
                android:id="@+id/button9"
                android:text="9"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />
            <Button
                android:id="@+id/buttonFunctions"
                android:text="@string/functions"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onClearButtonClick" />

            <Button
                android:id="@+id/buttonQr"
                android:text="@string/Scan"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onClearButtonClick" />
            <Button
                android:id="@+id/button4"
                android:text="4"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />

            <Button
                android:id="@+id/button5"
                android:text="5"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />

            <Button
                android:id="@+id/button6"
                android:text="6"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />
            <Button
                android:id="@+id/buttonbackspace"
                android:text="BS"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />
            <Button
                android:id="@+id/buttonClear"
                android:text="@string/CL"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />
            <Button
                android:id="@+id/button1"
                android:text="1"
                android:textSize="24sp"

                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick"
                android:tag="1"/>



            <Button
                android:id="@+id/button2"
                android:text="2"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />

            <Button
                android:id="@+id/button3"
                android:text="3"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />





            <Button
                android:id="@+id/button0"
                android:text="0"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />



            <Button
                android:id="@+id/buttonComma"
                android:text="@string/point"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/textviewextColor"
                android:onClick="onNumberButtonClick" />









        </GridLayout>


    </LinearLayout>

</LinearLayout>
